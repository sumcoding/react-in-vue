{
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "serve": "turbo run serve",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "create:app": "pnpm create vite --template vue-ts"
  },
  "devDependencies": {
    "eslint": "^7.32.0",
