    "vite": "^4.3.9"
  },
  "packageManager": "pnpm@8.5.1",
  "pnpm": {
    "overrides": {
      "react": "^18.2.0",
      "react-dom": "^18.2.0",
      "vue": "^3.3.4",
      "@originjs/vite-plugin-federation": "^1.2.3",
      "@vitejs/plugin-react": "^4.0.0",
      "@vitejs/plugin-vue": "^4.2.3",
      "vite": "^4.3.9"
    }
  }
}